{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "baseUrl": "./src",
    "paths": {
      "@root/*": ["app/*"],
      "@env/*": ["environments/*"],
      "@app/*": ["app/*"],

      "@core/*": ["app/core/*"],
      "@shared/*": ["app/shared/*"],
      "@pipes/*": ["app/shared/pipes/*"],
      "@directives/*": ["app/shared/directives/*"]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
